<project name="Guestbook Highrep" default="compile">

  <property name="CATALINA_HOME" location="/home/eslater/apache-tomcat-6.0.35" />

  <path id="project.classpath">
    <fileset dir="${CATALINA_HOME}/lib">
      <include name="**/*.jar" />
    </fileset>
  </path>

  <target name="compile">
    <mkdir dir="war/WEB-INF/classes" />
    <copy todir="war/WEB-INF/classes">
      <fileset dir="src">
        <exclude name="**/*.java" />
      </fileset>
    </copy>
    <javac
        srcdir="src"
        destdir="war/WEB-INF/classes"
        classpathref="project.classpath"
        debug="on" 
        includeantruntime="false"/>
  </target>
  
  <target name="build" depends="compile">
    <copy todir="war/">
      <fileset dir="resources">
        <include name="*.html" />
        <include name="*.jsp" />
      </fileset>
    </copy>
    <copy todir="war/WEB-INF">
      <fileset dir="resources">
        <include name="web.xml" />
      </fileset>
    </copy>
  </target>

  <target name="deploy" depends="build">
    <copy todir="${CATALINA_HOME}/webapps/ROOT/">
      <fileset dir="war/">
        <include name="**/*" />
      </fileset>
    </copy>
  </target>

</project>
